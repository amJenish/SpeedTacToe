<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/gamebackground" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:id="@+id/zeldaturn"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/zeldabackground" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/sonicturn"
                    android:padding="5sp"
                    android:src="@drawable/sonicbackground" />

            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/a"
                    android:onClick="aClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/b"
                    android:onClick="bClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/c"
                    android:onClick="cClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/d"
                    android:onClick="dClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/e"
                    android:onClick="eClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/f"
                    android:onClick="fClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/g"
                    android:onClick="gClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/h"
                    android:onClick="hClick"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/i"
                    android:onClick="iClick"
                    android:src="@drawable/blank" />
            </GridLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="leftClick"
                    android:padding="5sp"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/redleftturn" />


                <ImageView
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:onClick="rightClick"
                    android:padding="5sp"
                    android:src="@drawable/redrightturn" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    // Separating this Textview from LinearLayout because button's spacing changes according to the text's length.
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait till green.."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:id="@+id/notices"
        android:fontFamily="serif-monospace"/>
</RelativeLayout>